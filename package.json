{
	"name": "bun-dev-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot server/index.ts",
		"start": "NODE_ENV=production bun server/index.ts",
		"build": "bun run build.ts",
		"test": "bun test",
		"lint": "bun --bun eslint .",
		"lint:fix": "bun --bun eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --noEmit",
		"verify": "bun run typecheck && bun run test && bun run build && bun run lint && bun run format:check"
	},
	"dependencies": {
		"@fontsource-variable/public-sans": "^5.2.7",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slot": "^1.2.3",
		"bun-plugin-tailwind": "^0.1.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.545.0",
		"prettier": "^3.7.4",
		"react": "^19",
		"react-dom": "^19",
		"shadcn": "^3.8.4",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@eslint/config-helpers": "^0.5.2",
		"@eslint/js": "^10.0.1",
		"@types/bun": "latest",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "^17.3.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.4.0",
		"typescript-eslint": "^8.55.0"
	}
}
